<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="HelloForms.RegisterForm"
	xmlns:local="clr-namespace:HelloForms;assembly=HelloForms"
	>
	<ContentPage.Content>
		<ScrollView>
			<StackLayout Spacing="0" Orientation="Vertical">
				<!-- 1 CHOOSE YOUR MODEL -->
				<StackLayout

					Spacing="0"
					Orientation="Vertical"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Fill"
					BackgroundColor="White"
					>

					<!-- 1 CHOOSE YOUR MODEL -->
					<StackLayout
						Orientation="Horizontal"
						Spacing="10"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="Fill"
						HeightRequest="30"
						BackgroundColor="#009aca"
						>

						<Label 
							Text="1" 
							HorizontalOptions="Fill" 
							VerticalOptions="FillAndExpand" 
							WidthRequest="30" 
							BackgroundColor="Gray"
							VerticalTextAlignment="Center"
							HorizontalTextAlignment="Center"
						/>
						<Label 
							Text="CHOOSE YOUR MODEL" 
							HorizontalOptions="Start" 
							TextColor="White"
							VerticalTextAlignment="Center"
							HorizontalTextAlignment="Center"
							/>
					</StackLayout>
					<StackLayout
						Spacing="5"
						Padding="10 ,0 ,0 ,0"
						Orientation="Vertical"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="FillAndExpand"
						>
						<Label
							VerticalOptions="Fill"
							HeightRequest="30"
							BackgroundColor="White"
							FontAttributes="Bold"
							VerticalTextAlignment="Center"
							Text="Model*"
							TextColor="Gray"
						/>
						<Label
							Text="NEW GRAND C4 PICASSO"
							TextColor="#f07814"
							FontAttributes="Bold"
							BackgroundColor="White"
						/>
						<AbsoluteLayout>
							<Image
								AbsoluteLayout.LayoutBounds="0, 0, 1, 150"
                				AbsoluteLayout.LayoutFlags="WidthProportional"
								BackgroundColor="White"
								Source="Nouveau_Grand_C4_Picasso.png"
							/>
							<Label
								Text=">"
								TextColor="Gray"
								VerticalTextAlignment="Center"
								FontSize="20"
								AbsoluteLayout.LayoutBounds="1, .5, 40, 40"
                				AbsoluteLayout.LayoutFlags="PositionProportional"
							/>
						</AbsoluteLayout>

					</StackLayout>

				</StackLayout>

				<!-- SELECT YOUR DELEARSHIP -->
				<StackLayout
					Spacing="0"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="Fill"
					>
					<StackLayout
						Orientation="Horizontal"
						Spacing="10"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="Fill"
						HeightRequest="30"
						BackgroundColor="#009aca"
						>

						<Label 
							Text="2" 
							HorizontalOptions="Fill" 
							VerticalOptions="FillAndExpand" 
							WidthRequest="30" 
							BackgroundColor="Gray"
							VerticalTextAlignment="Center"
							HorizontalTextAlignment="Center"
						/>
						<Label 
							Text="SELECT YOUR DEALERSHIP" 
							HorizontalOptions="Start" 
							TextColor="White"
							VerticalTextAlignment="Center"
							HorizontalTextAlignment="Center"
						/>
					</StackLayout>
					<AbsoluteLayout
						VerticalOptions="Fill"
						BackgroundColor="White"
						HeightRequest="50"
						>
							<Label
								x:Name = "dealerLocation"
								Text="CitroÃ«n Singapore 239 Alexandra Road"
								LineBreakMode="WordWrap"
								AbsoluteLayout.LayoutBounds="10, 0, 1, 1"
								TextColor="Gray"
                				AbsoluteLayout.LayoutFlags="WidthProportional, HeightProportional"
								VerticalTextAlignment="Center"
							/>
							<Label
								Text=">"
								FontSize="20"
								VerticalTextAlignment="Center"
								AbsoluteLayout.LayoutBounds="1, .5, 40, 40"
                				AbsoluteLayout.LayoutFlags="PositionProportional"
								TextColor="Gray"
							/>
					</AbsoluteLayout>
				</StackLayout>

				<!-- ENTER YOUR CONTACT DETAILS -->
				<StackLayout
					Spacing="0"
					Orientation="Vertical"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					>
					<StackLayout
						Orientation="Horizontal"
						Spacing="10"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="Fill"
						HeightRequest="30"
						BackgroundColor="#009aca"
						>

						<Label 
							Text="3" 
							HorizontalOptions="Fill" 
							VerticalOptions="FillAndExpand" 
							WidthRequest="30" 
							BackgroundColor="Gray"
							VerticalTextAlignment="Center"
							HorizontalTextAlignment="Center"
						/>
						<Label 
							Text="ENTER YOUR CONTACT DETAILS" 
							HorizontalOptions="Start" 
							TextColor="White"
							VerticalTextAlignment="Center"
							HorizontalTextAlignment="Center"
						/>
					</StackLayout>
					<StackLayout
						Spacing="0"
						HorizontalOptions="FillAndExpand"
						VerticalOptions="FillAndExpand"
						>
						<StackLayout
							Padding="10, 0, 0, 0"
							Orientation="Horizontal"
							VerticalOptions="Fill"
							HeightRequest="40"
							BackgroundColor="White"
							>
							<Label 
								Text="Titles*"
								VerticalTextAlignment="Center"
								TextColor="Gray"

							/>
						</StackLayout>
						<StackLayout
							Padding="10, 0, 10, 0"
							Spacing="20"
							VerticalOptions="FillAndExpand"
							HorizontalOptions="FillAndExpand"
							>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="First Name*"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="Last Name*"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="Email Address*"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="Mobile*"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="Address Line 1"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="White"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="Address Line 2"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="Zip Code"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>
							<local:MyEntry
								TextColor="Gray"
								VerticalOptions="Fill"
								HeightRequest="40"
								Placeholder="City"
								PlaceholderColor="Gray"
								BackgroundColor="White">
							</local:MyEntry>

						</StackLayout>
					</StackLayout>
				</StackLayout>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
